<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.stl.tpalt.redorblack">

    <application
        android:name=".model.RedOrBlackApp"
        android:allowBackup="false"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher_round"
        android:supportsRtl="true"
        android:theme="@style/RedOrBlack"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activities.WelcomeActivity"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PlayerSelectionActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".activities.StartGameActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".activities.RulesActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".activities.SettingsActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.Phase1Activity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".activities.Phase2Activity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".activities.Phase3Activity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".activities.Phase4Activity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".activities.Phase5Activity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".activities.AppLogActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".activities.StatsActivity"
            android:screenOrientation="nosensor" />
    </application>

</manifest> <!-- android:screenOrientation="nosensor" -->
