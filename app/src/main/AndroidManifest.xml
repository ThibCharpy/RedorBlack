<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.stl.tpalt.redorblack">

    <application
        android:name=".model.RedOrBlackApp"
        android:allowBackup="false"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher_round"
        android:supportsRtl="true"
        android:theme="@style/RedOrBlack"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".activities.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.PlayerSelectionActivity" />
        <activity android:name=".activities.StartGameActivity" />
        <activity android:name=".activities.RulesActivity" />
        <activity android:name=".activities.SettingsActivity" />
        <activity android:name=".activities.Phase1Activity" />
        <activity android:name=".activities.Phase2Activity" />
        <activity android:name=".activities.Phase3Activity" />
        <activity android:name=".activities.Phase4Activity" />
        <activity android:name=".activities.Phase5Activity" />
        <activity android:name=".activities.EndGameActivity" />
    </application>

</manifest> <!-- android:screenOrientation="nosensor" -->
